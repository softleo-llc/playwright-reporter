{
    "name": "@softleo/playwright-reporter",
    "version": "0.0.1",
    "description": "A pipeline-friendly custom reporter for Playwright tests with enhanced logging.",
    "main": "dist/reporter.js",
    "types": "dist/reporter.d.ts",
    "exports": {
        ".": {
            "import": "./dist/reporter.js",
            "require": "./dist/reporter.js",
            "types": "./dist/reporter.d.ts"
        }
    },
    "dependencies": {
        "@octokit/rest": "^21.1.1",
        "@types/babel-code-frame": "^6.20.8",
        "axios": "^1.6.5",
        "azure-devops-node-api": "14.1.0",
        "dotenv": "^16.3.1",
        "essential-common-utils": "^1.6.0",
        "handlebars": "4.7.7",
        "nodemailer": "6.9.13",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.7",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@babel/code-frame": "^7.21.0",
        "@playwright/test": "^1.51",
        "@types/babel__code-frame": "^7.0.6",
        "@types/node": "^22.13.4",
        "@types/nodemailer": "6.4.15",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.5.1",
        "standard-version": "^9.5.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.7.3"
    },
    "scripts": {
        "build": "tsc",
        "lint:eslint": "eslint \"src/**/*.ts\" --fix",
        "lint:prettier": "prettier . --write",
        "lint": "npm run lint:eslint && npm run lint:prettier",
        "prettier": "prettier . --write",
        "release": "standard-version",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:report": "playwright show-report"
    }
}
